[colors]
background = ${xrdb:color0:#000}
background-alt = ${xrdb:color8:#222}
foreground = ${xrdb:color7:#222}
foreground-alt = ${xrdb:color8:#222}
primary = ${xrdb:color9:#222}
secondary = ${xrdb:color2:#222}
alert = ${xrdb:color9:#222}

;;********************DP***********************
[bar/DP]
monitor = ${env:MONITOR:DP-5}
width = 100%
height = 30
;offset-x = 1%
;offset-y = 1%
radius = 0
fixed-center = true

enable-icp = true

background = ${colors.background}
foreground = ${colors.foreground}

line-size = 2
line-color = #f00

border-size = 0
border-color = #00000000

padding-left = 0
padding-right = 4

module-margin-left = 1
module-margin-right = 1

font-0 = fixed:pixelsize=10;1
font-1 = "FontAwesome5Free:style=solid:pixelsize=12:antialias=true;0"
font-2 = "FontAwesome5Brands:style=solid:pixelsize=10:antialias=true;0"

modules-left = i3 player-mpris-simple
modules-center = date
modules-right = pulseaudio memory cpu

;tray-position =
;tray-padding =
;tray-background = #0063ff

;wm-restack = bspwm
;wm-restack = i3

;override-redirect = true

;scroll-up = bspwm-desknext
;scroll-down = bspwm-deskprev

;scroll-up = i3wm-wsnext
;scroll-down = i3wm-wsprev

cursor-click = pointer
cursor-scroll = ns-resize

